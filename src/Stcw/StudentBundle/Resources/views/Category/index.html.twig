{% extends "StcwDeskBundle::layout.html.twig" %}
{% block content %}
<h2>Student Categories</h2>

<ul class="createlink">
    <li>
        <a href="{{ path('category_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
<table class="records_list">
    <thead>
        <tr>
            <th>Title</th>
            <th>Longtitle</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td>{{ entity.title }}</td>
            <td>{{ entity.longtitle }}</td>
            <td>
                <a href="{{ path('category_show', { 'id': entity.id }) }}">show</a>
                &nbsp;
                <a href="{{ path('category_edit', { 'id': entity.id }) }}">edit</a>
                </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}