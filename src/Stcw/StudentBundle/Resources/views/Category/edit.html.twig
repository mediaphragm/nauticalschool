{% extends "StcwDeskBundle::layout.html.twig" %}
{% block content %}
<h2>{% trans %}Edit Student Category{% endtrans %}</h2>

<form action="{{ path('category_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    <table class="record_properties">
        <tr>
            <td>{% trans %} Title {% endtrans %}</td><td>{{ form_widget(edit_form.title) }}</td>
        </tr>
        <tr>
            <td>{% trans %} Full title {% endtrans %}</td><td>{{ form_widget(edit_form.longtitle) }}</td>
        </tr>
        <tr>
            <td>Modules</td><td>
<ul>                
{% for module in edit_form.modules %}
    <li>{{ form_widget(module) }}&nbsp; {{form_label(module) }}</li>
    {% endfor %}
    </ul>
            </td>
        </tr>
    </table>
    {{ form_rest(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('category') }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('category_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}